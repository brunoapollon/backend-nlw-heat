{
  "env": {
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/prefer-default-export": "off",
    "import/no-unresolved": "off",
    "no-console": "off",
    "no-unused-vars": "warn"
  },
  "import/extensions": [
    "error",
    "ignorePackages",
    {
      "ts": "never"
    }
  ],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
